---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Bar Gayarre - Nuestra Carta">
  <main class="pt-20">
    <section class="py-20 bg-secondary/10">
      <div class="container mx-auto px-4">
        <h1 class="text-5xl font-serif text-center mb-12">Nuestra Carta</h1>
        
        <!-- Entrantes -->
        <div class="mb-16">
          <h2 class="text-3xl font-serif text-primary mb-8 text-center">Entrantes</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Jamón Ibérico de Bellota</span>
                    <p class="text-sm text-gray-600">D.O. Guijuelo</p>
                  </div>
                  <span class="font-medium">24.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Espárragos de Navarra</span>
                    <p class="text-sm text-gray-600">D.O. Navarra con mahonesa</p>
                  </div>
                  <span class="font-medium">16.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Ensalada de Tomate</span>
                    <p class="text-sm text-gray-600">Con ventresca de bonito</p>
                  </div>
                  <span class="font-medium">14.00€</span>
                </li>
              </ul>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Alcachofas Salteadas</span>
                    <p class="text-sm text-gray-600">Con jamón y ajetes</p>
                  </div>
                  <span class="font-medium">16.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Pimientos del Piquillo</span>
                    <p class="text-sm text-gray-600">Confitados con ajo</p>
                  </div>
                  <span class="font-medium">12.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Ensalada Mixta</span>
                    <p class="text-sm text-gray-600">De la huerta navarra</p>
                  </div>
                  <span class="font-medium">10.00€</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Verduras -->
        <div class="mb-16">
          <h2 class="text-3xl font-serif text-primary mb-8 text-center">Verduras</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Pochas a la Navarra</span>
                    <p class="text-sm text-gray-600">Con sus sacramentos</p>
                  </div>
                  <span class="font-medium">16.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Menestra de Verduras</span>
                    <p class="text-sm text-gray-600">Verduras de temporada</p>
                  </div>
                  <span class="font-medium">15.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Borraja con Patata</span>
                    <p class="text-sm text-gray-600">Verdura tradicional navarra</p>
                  </div>
                  <span class="font-medium">14.00€</span>
                </li>
              </ul>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Alcachofas de Tudela</span>
                    <p class="text-sm text-gray-600">En flor con aceite de oliva</p>
                  </div>
                  <span class="font-medium">16.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Cogollos de Tudela</span>
                    <p class="text-sm text-gray-600">Con anchoas del Cantábrico</p>
                  </div>
                  <span class="font-medium">14.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Pimientos del Cristal</span>
                    <p class="text-sm text-gray-600">Fritos con sal maldon</p>
                  </div>
                  <span class="font-medium">12.00€</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Pescados -->
        <div class="mb-16">
          <h2 class="text-3xl font-serif text-primary mb-8 text-center">Pescados</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Merluza a la Romana</span>
                    <p class="text-sm text-gray-600">Con ensalada de la huerta</p>
                  </div>
                  <span class="font-medium">22.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Bacalao al Ajoarriero</span>
                    <p class="text-sm text-gray-600">Receta tradicional</p>
                  </div>
                  <span class="font-medium">20.00€</span>
                </li>
              </ul>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Rape a la Plancha</span>
                    <p class="text-sm text-gray-600">Con refrito de ajetes</p>
                  </div>
                  <span class="font-medium">24.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Chipirones en su Tinta</span>
                    <p class="text-sm text-gray-600">Con arroz blanco</p>
                  </div>
                  <span class="font-medium">18.00€</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Carnes -->
        <div class="mb-16">
          <h2 class="text-3xl font-serif text-primary mb-8 text-center">Carnes</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Chuletón de Vaca</span>
                    <p class="text-sm text-gray-600">Maduración 45 días (precio por kg)</p>
                  </div>
                  <span class="font-medium">65.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Cordero al Chilindrón</span>
                    <p class="text-sm text-gray-600">Receta tradicional navarra</p>
                  </div>
                  <span class="font-medium">24.00€</span>
                </li>
              </ul>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Rabo de Toro</span>
                    <p class="text-sm text-gray-600">Estofado al vino tinto</p>
                  </div>
                  <span class="font-medium">22.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Carrilleras de Cerdo</span>
                    <p class="text-sm text-gray-600">Al Pedro Ximénez</p>
                  </div>
                  <span class="font-medium">20.00€</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Postres -->
        <div class="mb-16">
          <h2 class="text-3xl font-serif text-primary mb-8 text-center">Postres Caseros</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Torrija Caramelizada</span>
                    <p class="text-sm text-gray-600">Con helado de vainilla</p>
                  </div>
                  <span class="font-medium">7.00€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Cuajada de Leche de Oveja</span>
                    <p class="text-sm text-gray-600">Con miel de romero</p>
                  </div>
                  <span class="font-medium">6.00€</span>
                </li>
              </ul>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <ul class="space-y-4">
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Pantxineta</span>
                    <p class="text-sm text-gray-600">Hojaldre relleno de crema</p>
                  </div>
                  <span class="font-medium">6.50€</span>
                </li>
                <li class="flex justify-between items-center">
                  <div>
                    <span class="font-medium">Queso del Roncal</span>
                    <p class="text-sm text-gray-600">Con membrillo y nueces</p>
                  </div>
                  <span class="font-medium">7.00€</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Vinos -->
        <div>
          <h2 class="text-3xl font-serif text-primary mb-8 text-center">Vinos</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-xl font-serif mb-4">D.O. Navarra</h3>
              <ul class="space-y-2">
                <li class="flex justify-between">
                  <span>Ochoa Crianza</span>
                  <span>18.00€</span>
                </li>
                <li class="flex justify-between">
                  <span>Chivite Gran Feudo</span>
                  <span>16.00€</span>
                </li>
                <li class="flex justify-between">
                  <span>Príncipe de Viana</span>
                  <span>15.00€</span>
                </li>
              </ul>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-xl font-serif mb-4">D.O.Ca. Rioja</h3>
              <ul class="space-y-2">
                <li class="flex justify-between">
                  <span>Muga Crianza</span>
                  <span>24.00€</span>
                </li>
                <li class="flex justify-between">
                  <span>Marqués de Riscal</span>
                  <span>22.00€</span>
                </li>
                <li class="flex justify-between">
                  <span>Viña Real</span>
                  <span>20.00€</span>
                </li>
              </ul>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-xl font-serif mb-4">D.O. Ribera del Duero</h3>
              <ul class="space-y-2">
                <li class="flex justify-between">
                  <span>Emilio Moro</span>
                  <span>26.00€</span>
                </li>
                <li class="flex justify-between">
                  <span>Pesquera</span>
                  <span>25.00€</span>
                </li>
                <li class="flex justify-between">
                  <span>Protos</span>
                  <span>22.00€</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
<Footer/>