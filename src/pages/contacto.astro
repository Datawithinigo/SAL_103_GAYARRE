---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<Layout title="Bar Gayarre - Contacto">
  <Header />
  <main class="pt-20">
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h1 class="text-5xl font-serif text-center mb-12">Contacto</h1>
        
        <div class="grid md:grid-cols-2 gap-12">
          <div>
            <div class="bg-secondary/10 p-8 rounded-lg mb-8">
              <h2 class="text-2xl font-serif text-primary mb-4">Ubicación</h2>
              <p class="mb-2">Calle Herrerías 27</p>
              <p class="mb-4">Tudela, Navarra</p>
              
              <h2 class="text-2xl font-serif text-primary mb-4">Horario</h2>
              <p class="mb-2">Lunes a Viernes: 7:00 - 22:00</p>
              <p class="mb-4">Sábados y Domingos: 8:00 - 23:00</p>
              
              <h2 class="text-2xl font-serif text-primary mb-4">Reservas</h2>
              <p class="mb-2">Tel: 635 34 01 66</p>
              <p class="mb-4">Email: info@bargayarre.com</p>
            </div>

            <div class="bg-secondary/10 p-8 rounded-lg">
              <h2 class="text-2xl font-serif text-primary mb-4">Formulario de Contacto</h2>
              <form class="space-y-4">
                <div>
                  <label for="nombre" class="block text-sm font-medium text-gray-700 mb-1">
                    Nombre
                  </label>
                  <input
                    type="text"
                    id="nombre"
                    name="nombre"
                    class="w-full px-4 py-2 rounded-md border border-gray-300 focus:border-primary focus:ring focus:ring-primary/20"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                    Email
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="w-full px-4 py-2 rounded-md border border-gray-300 focus:border-primary focus:ring focus:ring-primary/20"
                  />
                </div>
                <div>
                  <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-1">
                    Mensaje
                  </label>
                  <textarea
                    id="mensaje"
                    name="mensaje"
                    rows="4"
                    class="w-full px-4 py-2 rounded-md border border-gray-300 focus:border-primary focus:ring focus:ring-primary/20"
                  ></textarea>
                </div>
                <button
                  type="submit"
                  class="w-full bg-primary text-white py-2 px-4 rounded-md hover:bg-primary/90 transition-colors"
                >
                  Enviar Mensaje
                </button>
              </form>
            </div>
          </div>
          
          <div class="bg-gray-200 rounded-lg" style="min-height: 300px">
            
            <!-- Aquí iría el mapa -->
            <div class="h-full w-full">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2962.088999693529!2d-1.6103570227677981!3d42.06271167122211!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd5a4f57586eb885%3A0x601b46a5ce1b34b1!2sGayarre%20Bar%20Restaurante!5e0!3m2!1ses!2ses!4v1740501055849!5m2!1ses!2ses"
                width="100%"
                height="100%"
                style="border:0;"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                class="w-full h-full"
              ></iframe>
            </div>

          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
<Footer/>