<body class="font-sans">
  <header class="fixed w-full bg-white/90 backdrop-blur-sm z-50 shadow-sm">
    <nav class="container mx-auto px-4 py-4">
      <div class="flex justify-between items-center">
        <a href="/" class="flex items-center text-2xl font-serif font-bold text-primary">
          <img src="/Gayarre_nobackground.png" alt="Gayarre" class="header-logo h-8 mr-2" />
          <span>Gayarre</span>
        </a>
        <div class="hidden md:flex space-x-8">
          <a href="/" class="text-gray-800 hover:text-primary">Inicio</a>
          <a href="/nosotros" class="text-gray-800 hover:text-primary">Nosotros</a>
          <a href="/menu" class="text-gray-800 hover:text-primary">Menú</a>
          <a href="/contacto" class="text-gray-800 hover:text-primary">Contacto</a>
        </div>
        <button 
          class="md:hidden text-gray-800 hover:text-primary"
          id="menuButton"
          aria-label="Menú"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      <!-- Menú móvil -->
      <div class="md:hidden hidden" id="mobileMenu">
        <div class="pt-4 pb-3 space-y-3">
          <a href="/" class="block text-gray-800 hover:text-primary">Inicio</a>
          <a href="/nosotros" class="block text-gray-800 hover:text-primary">Nosotros</a>
          <a href="/menu" class="block text-gray-800 hover:text-primary">Menú</a>
          <a href="/contacto" class="block text-gray-800 hover:text-primary">Contacto</a>
        </div>
      </div>
    </nav>
  </header>

  <slot />

  <script>
    const menuButton = document.getElementById('menuButton');
    const mobileMenu = document.getElementById('mobileMenu');

    menuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  </script>
</body>